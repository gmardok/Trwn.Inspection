<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:Trwn.Inspection.Mobile.ViewModels"
             x:Class="Trwn.Inspection.Mobile.Views.AllReportsPage"
             x:DataType="viewModels:AllReportViewModel"
             Title="Reports">
    <ScrollView>
        <VerticalStackLayout Padding="10" Spacing="10">
            <CollectionView
                SelectionMode="Single"
                ItemsSource="{Binding LocalReports}"
                SelectedItem="{Binding SelectedReport}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="x:String">
                        <Label Text="{Binding .}" FontSize="20" Padding="10"/>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <Button Text="New report" Command="{Binding NewReportCommand}" />
            <Button Text="Open report" Command="{Binding OpenReportCommand}" />
            <Button Text="Upload report to server" Command="{Binding UploadReportCommand}" />            
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>